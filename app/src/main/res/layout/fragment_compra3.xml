<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pantallacompra.FragmentCompra3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="650dp"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/check_verde"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            style="@style/Texto_Blod"
            android:textSize="25sp"
            android:textColor="@color/secondary_lila"
            android:text="@string/gracias_por_tu_compra"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Texto"
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="#545353"
            android:text="Compra realizada correctamente"/>
        <Button
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/BotonLilaClaro"
            android:text="Volver al Inicio"/>
    </LinearLayout>

</FrameLayout>