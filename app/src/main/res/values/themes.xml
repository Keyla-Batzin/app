<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Bloom" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="colorPrimary">@color/primary_morado</item>
        <item name="colorPrimaryDark">@color/morado_oscuro</item>
        <item name="colorAccent">@color/secondary_lila</item>

        <item name="android:windowBackground">@color/background_primary</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/morado_oscuro</item>

        <!-- Botones -->
        <item name="materialButtonStyle">@style/BotonNormalClaro</item>
        <!-- Menu -->
        <item name="popupMenuStyle">@style/Custom.PopupMenuStyle</item>

    </style>

    <!-- Estilo personalizado para los botones -->
    <!-- Boton Claro -->
    <style name="BotonNormalClaro" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/secondary_lila</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/poppins_blod</item>
        <item name="android:radius">12dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">0dp</item>
    </style>

    <!-- Boton Oscuro -->
    <style name="BotonNormalOscuro" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/purple</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/poppins_blod</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:radius">12dp</item>
    </style>

    <!-- Boton Cuadrado -->
    <style name="BotonLilaClaro" parent="Widget.AppCompat.Button">
        <!-- Tamaño y forma -->
        <item name="backgroundTint">@color/secondary_lila</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/poppins_blod</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Boton Cuadrado rojo Suprimir -->
    <style name="BotonSuprimir" parent="Widget.AppCompat.Button">
        <!-- Tamaño y forma -->
        <item name="backgroundTint">@color/pastel_red</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">@font/poppins_blod</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Boton Cuadrado Oscuro -->
    <style name="BotonOscuro" parent="Widget.AppCompat.Button">
        <!-- Tamaño y forma -->
        <item name="backgroundTint">@color/primary_morado</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/poppins_blod</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Boton Rosa Claro -->
    <style name="BotonRosaClaro" parent="Widget.AppCompat.Button">
        <!-- Tamaño y forma -->
        <item name="backgroundTint">#A87B7E</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/poppins_blod</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Boton Rosa Oscuro -->
    <style name="BotonRosaOscuro" parent="Widget.AppCompat.Button">
        <!-- Tamaño y forma -->
        <item name="backgroundTint">#895E61</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/poppins_blod</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <!-- Estilo EditedText -->
    <style name="editedTextStyle" parent="Widget.AppCompat.EditText">
        <!-- Tamaño y forma -->
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">-45dp</item>
        <item name="android:ems">10</item>
    </style>

    <style name="Theme.Bloom" parent="Base.Theme.Bloom" />

    <!-- Tema menu opciones -->
    <style name="Custom.PopupMenuStyle" parent="Widget.Material3.PopupMenu">
        <item name="android:popupBackground">@color/white</item>
        <!-- Cambia el color de fondo del menú de opciones -->
        <item name="android:textColor">@color/black</item>
        <!-- Cambia el color del texto de las opciones del menú -->
    </style>

    <!-- Estilo personalizado para TextView -->
    <!-- Titulo -->
    <style name="Titulo_Grande">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/poppins_extra_blod</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="android:gravity">start|center</item>
    </style>

    <!-- Titulo -->
    <style name="Titulo">
        <item name="android:textSize">35sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/poppins_blod</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="android:gravity">start|center</item>
    </style>

    <!-- Titulo principio de pantalla -->
    <style name="tituloInicio">
        <item name="android:textSize">35sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/poppins_blod</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="android:gravity">start|center</item>
    </style>
    <!-- Subtitulo -->
    <style name="Subtitulo">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/poppins_blod</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="android:gravity">start|center</item>
    </style>

    <!-- Texto Normal Blod -->
    <style name="Texto_Blod">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/poppins_blod</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="android:gravity">start|center</item>
    </style>

    <!-- Texto Normal Blod -->
    <style name="Texto">
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="android:gravity">start|center</item>
    </style>

    <!-- Texto CardView Home -->
    <style name="TextoCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Tema personalizado para el Spinner -->
    <style name="CustomSpinnerStyle">
        <!-- Estilo del Spinner cuando está cerrado -->
        <item name="android:background">#61000000</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>

        <!-- Estilo de los ítems cuando el Spinner está desplegado -->
        <item name="android:popupBackground">@android:color/white</item>
        <item name="android:dropDownVerticalOffset">4dp</item>
    </style>
    
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="android:windowSplashScreenBackground">@color/white</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/logo</item>
        <item name="android:windowSplashScreenAnimationDuration">50</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.Bloom</item>
    </style>

</resources>