<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Bloom" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="colorPrimary">@color/purple_primary</item>
        <item name="colorPrimaryDark">@color/purple_dark</item>
        <item name="colorAccent">@color/green_turquoise</item>

        <item name="android:windowBackground">@color/background_primary</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/purple_dark</item>

        <!-- Botones -->
        <item name="materialButtonStyle">@style/Button</item>
        <!-- Menu -->
        <item name="popupMenuStyle">@style/Custom.PopupMenuStyle</item>

    </style>

    <!-- Estilo personalizado para los botones -->
    <!-- Boton Oscuro -->
    <style name="Button" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/purple_primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/poppins_blod</item>
        <item name="android:radius">12dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">0dp</item>
    </style>

    <!-- Boton Claro -->
    <style name="Button2" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/indigo</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/poppins_blod</item>
        <item name="android:radius">12dp</item>
    </style>

    <style name="Theme.Bloom" parent="Base.Theme.Bloom" />


    <!-- Tema menu opciones -->
    <style name="Custom.PopupMenuStyle" parent="Widget.Material3.PopupMenu">
        <item name="android:popupBackground">@color/white</item>
        <!-- Cambia el color de fondo del menú de opciones -->
        <item name="android:textColor">@color/black</item>
        <!-- Cambia el color del texto de las opciones del menú -->
    </style>

    <!-- Estilo personalizado para TextView -->
    <!-- Titulo -->
    <style name="Titulo">
        <item name="android:textSize">35sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/poppins_blod</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="android:gravity">start|center</item>
    </style>
    <!-- Subtitulo -->
    <style name="Subtitulo">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/poppins_blod</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="android:gravity">start|center</item>
    </style>

    <!-- Texto Normal Blod -->
    <style name="Texto_Blod">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/poppins_blod</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="android:gravity">start|center</item>
    </style>

    <!-- Texto Normal Blod -->
    <style name="Texto">
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="android:gravity">start|center</item>
    </style>

</resources>